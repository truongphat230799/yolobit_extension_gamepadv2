<xml xmlns="https://developers.google.com/blockly/xml" id="toolbox" style="display: none">
  <category name="GAMEPAD" colour="#44cbc6" icon="gamepad">
    <block type="gamepad_init"/>
    <block type="gamepad_btn_pressed"/>
    <block type="gamepad_read_joystick"/>
    <block type="gamepad_direction"/>
    <block type="gamepad_set_led_rgb">
      <value name="color">
        <shadow type="colour_picker">
          <field name="COLOUR">#0000ff</field>
        </shadow>
      </value>
    </block>

    <block type="gamepad_set_rumble">
      <value name="force">
        <shadow type="math_number">
          <field name="NUM">50</field>
        </shadow>
      </value>
      <value name="duration">
        <shadow type="math_number">
          <field name="NUM">1000</field>
        </shadow>
      </value>
    </block>
    <block type="gamepad_processing"/>
    <block type="gamepad_is_connected" />
  </category>
</xml>
